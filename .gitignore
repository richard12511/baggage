# Add this to .gitignore:
cat > .gitignore << 'EOF'
# Dependencies
node_modules/

# Build output
dist/

# Environment variables (NEVER commit these!)
.env
.env.local
.env.*.local

# Logs
logs/
*.log
npm-debug.log*

# OS files
.DS_Store
Thumbs.db

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Test coverage
coverage/
EOF